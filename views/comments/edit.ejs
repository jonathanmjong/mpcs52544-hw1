<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1>Edit Review</h1>
		<div style="width: 30%; margin: 25px auto;">
            <!-- instead of full educatorFromController object we just need educator id passed from comments controller  -->
			<form action="/educators/<%= educatorIdFromController %>/comments/<%= commentFromController._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="commentFromView[commentText]" value="<%= commentFromController.commentText %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-default btn-block">Submit!</button>
				</div>
			</form>
			<a href="/educators">Back to EdaMate profiles </a>
		</div>
	</div>
</div>

<% include ../partials/footer %>
