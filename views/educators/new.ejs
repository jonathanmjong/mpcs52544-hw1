<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1>Create a new EdaMate profile</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/educators" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="educatorNewNameFromView" placeholder="name">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="educatorNewPriceFromView" placeholder="price" min="0.00" step="1.00">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="educatorNewImageFromView" placeholder="image url">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="educatorNewDescriptionFromView" placeholder="describe yourself!">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-default btn-block">Submit!</button>
				</div>
			</form>
			<a href="/educators">Back to EdaMate profiles </a>
		</div>
	</div>
</div>

<% include ../partials/footer %>
